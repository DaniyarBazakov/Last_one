  document.querySelectorAll(".lo--button-transp").forEach(element => {
    element.addEventListener('click', (event) => {
      document.querySelectorAll(".lo--button-transp").forEach(el =>{
        el.classList.remove("active");
      })
      event.currentTarget.classList.add("active")

    })

  });

</script>
















